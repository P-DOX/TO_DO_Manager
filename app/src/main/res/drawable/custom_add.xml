<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="50dp"
        android:right="50dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="315"
                android:endColor="@color/gradientEnd"
                android:centerColor="@color/gradientCentre"
                android:startColor="@color/gradientStart"
                android:type="linear" />
            <corners android:radius="20dp" />
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>

    <item
        android:bottom="50dp"
        android:left="0dp"
        android:right="0dp"
        android:top="50dp">

        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient
                android:angle="315"
                android:endColor="@color/gradientEnd"
                android:centerColor="@color/gradientCentre"
                android:startColor="@color/gradientStart"
                android:type="linear" />
            <size
                android:width="1dp"
                android:height="20dp" />
        </shape>
    </item>

</layer-list>